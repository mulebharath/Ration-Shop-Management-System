<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RS5 Data</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="/sk.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        .btn-group {
            margin-bottom: 20px;
        }
        .btn-group button {
            padding: 10px 20px;
            margin-right: 10px;
            cursor: pointer;
        }
        .chart-container {
            display: none;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
            
        }
        td{
            color: white;
        }
        th {
            background-color: #f2f2f2;
        }
        canvas {
    width: 80% !important; /* Ensure canvas takes the full width of its container */
    height: 470px !important; /* Auto height for responsiveness */
    background-color: #fbe5e5;
    border-radius: 10px;
    align-items: center;
    margin-left: 150px;
}

h1{
    text-align: center;
    color: orange;
    margin-bottom: 1rem;
    margin-top: 1rem;
}
.btn-group{
    text-align: center;

}
    </style>
</head>
<body>
    <header>
      
        <div class="navbar">
            <div style=" font-size: 2rem; color: orange; font-weight: bolder; cursor: pointer;" class="logo"><a href="/">RMS</a></div>
            <ul class="links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About Us</a></li>
          <!-- <li><a href="/login">Services</a></li> -->
          <li><a href="/contact">Conatct</a></li>
        </ul>
        <a href="/login" class="action_btn">Logout </a>
        <div class="toggle_btn">
          <i class="fa-solid fa-bars"></i>
        </div>
      </div>
    
      <div class="dropdown_menu ">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About Us</a></li>
        <!-- <li><a href="/">Services</a></li> -->
        <li><a href="/contact">Conatct</a></li>
          <li><a href="/login" class="action_btn">Logout </a> </li>
      </div>
    </header>

    <div class="btn-group">
        <button onclick="showData('2023')">RS5(2023)</button>
        <button onclick="showData('2024')">RS5(2024)</button>
    </div>
    <div id="chartContainer2023" class="chart-container">
        <h1>RS5(2023) Data in Graph</h1>
        <canvas id="chart2023"></canvas>
        <h1>RS5(2023) Data in Table</h1>
        <table id="table2023">
            <thead>
                <tr>
                    <th>Month</th>
                    <th>Rice</th>
                    <th>Dal</th>
                    <th>Sugar</th>
                </tr>
            </thead>
            <tbody>
                <% for (const month in sk5Data['2023']) { %>
                    <tr>
                        <td><%= month %></td>
                        <td><%= sk5Data['2023'][month].Rice %></td>
                        <td><%= sk5Data['2023'][month].Dal %></td>
                        <td><%= sk5Data['2023'][month].Sugar %></td>

                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <div id="chartContainer2024" class="chart-container">
        <h1>RS5(2024) Data in Graph</h1>
        <canvas id="chart2024"></canvas>
        <h1>RS5(2024) Data in Table</h1>
        <table id="table2024">
            <thead>
                <tr>
                    <th>Month</th>
                    <th>Rice</th>
                    <th>Dal</th>
                    <th>Sugar</th>
                </tr>
            </thead>
            <tbody>
                <% for (const month in sk5Data['2024']) { %>
                    <tr>
                        <td><%= month %></td>
                        <td><%= sk5Data['2024'][month].Rice %></td>
                        <td><%= sk5Data['2024'][month].Dal %></td>
                        <td><%= sk5Data['2024'][month].Sugar %></td>

                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <script>
        function showData(year) {
            const chartContainers = document.querySelectorAll('.chart-container');
            chartContainers.forEach(container => container.style.display = 'none');
            
            document.getElementById(`chartContainer${year}`).style.display = 'block';
            const ctx = document.getElementById(`chart${year}`).getContext('2d');
            const table = document.getElementById(`table${year}`);
            const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');
            
            const labels = [];
            const Rice = [];
            const Dal = [];
            const Sugar = [];

            for (let row of rows) {
                labels.push(row.cells[0].innerText);
                Rice.push(parseFloat(row.cells[1].innerText));
                Dal.push(parseFloat(row.cells[2].innerText));
                Sugar.push(parseFloat(row.cells[3].innerText));
            }

            const data = {
                labels: labels,
                datasets: [
                {
                        label: 'Rice',
                        data: Rice,
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Dal',
                        data: Dal,
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Sugar',
                        data: Sugar,
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }
                ]
            };

            const options = {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            };

            if (window.myChart) {
                window.myChart.destroy();
            }

            window.myChart = new Chart(ctx, {
                type: 'bar',
                data: data,
                options: options
            });
        }

        // Show sk5(2023) data by default
        showData('2023');
    </script>
</body>
</html>
