<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="index.css" />
  <title>Responsive Navbar</title>
  <style>
    /* Additional CSS for the boxes */
    .info-boxes {
      display: flex;
      justify-content: space-around;
      margin-top: 20px;
      
    }

    .info-box {
      width: 30%;
      padding: 20px;
      background-color: #f0f0f0;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      text-align: center;
      margin-right: 2rem;
      
    }

    .info-box h2 {
      font-size: 1.5rem;
      margin-bottom: 10px;
      color: orange;
    }

    .info-box p {
      font-size: 1.1rem;
      color: rgb(0, 0, 0);
    }
  </style>
</head>
<body>
  <header>
    <div class="navbar">
      <div style="font-size: 2rem; color: orange; font-weight: bolder; cursor: pointer;" class="logo"><a href="/">RMS</a></div>
      <ul class="links">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About Us</a></li>
        <li><a href="/login">Services</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
      <a href="/login" class="action_btn">Login</a>
      <div class="toggle_btn">
        <i class="fa-solid fa-bars"></i>
      </div>
    </div>
  
    <div class="dropdown_menu">
      <li><a href="/">Home</a></li>
      <li><a href="/about">About Us</a></li>
      <li><a href="/login">Services</a></li>
      <li><a href="/contact">Contact</a></li>
      <li><a href="/login" class="action_btn">Login</a></li>
    </div>
  </header>
  
  <main>
    <section id="main_section">
      <h1>Welcome</h1>
      <p>Ration Management System</p>
      

      <!-- Info boxes -->
      <div class="info-boxes">
        <div class="info-box">
          <h2>Available Stock</h2>
          <p>10,000 units</p>
        </div>
        <div class="info-box">
          <h2>Current Demand</h2>
          <p>7,500 units</p>
        </div>
        <div class="info-box">
          <h2>Latest Updates</h2>
          <p>New discounts on essential items!</p>
        </div>
      </div>
      <a style="margin-top: 2rem;" href="/login" class="action_btn">Explore Now</a>
    </section>
  </main>
  
  <script>
    const toggle_btn = document.querySelector(".toggle_btn");
    const menu = document.querySelector(".toggle_btn i");
    const dropdown_menu = document.querySelector(".dropdown_menu");

    toggle_btn.onclick = function () {
      dropdown_menu.classList.toggle('open');
      const is_opened = dropdown_menu.classList.contains('open');
      menu.classList = is_opened ? 'fa-solid fa-xmark' : 'fa-solid fa-bars';
    };
  </script>
</body>
</html>
