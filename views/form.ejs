<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Data Form</title>
    <link rel="stylesheet" href="/sk.css">
</head>
<style>
    

form {
    margin-left: 370px;
    width: 700px;
    padding: 20px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 4rem;
}

form label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
}

form select,
form input[type="number"] {
    width: 97%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 16px;
}

form button {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 12px 20px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease;
}

form button:hover {
    background-color: #0056b3;
}

p {
    margin-top: 10px;
    color: #007bff;
}

@media (max-width: 768px) {
    form {
        width: 90%;
    }
}
</style>
<body>
    <header>
      
        <div class="navbar">
            <div style=" font-size: 2rem; color: orange; font-weight: bolder; cursor: pointer;" class="logo"><a href="/">RMS</a></div>
            <ul class="links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About Us</a></li>
          <!-- <li><a href="/login">Services</a></li> -->
          <li><a href="/contact">Conatct</a></li>
        </ul>
        <a href="/login" class="action_btn">Logout </a>
        <div class="toggle_btn">
          <i class="fa-solid fa-bars"></i>
        </div>
      </div>
    
      <div class="dropdown_menu ">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About Us</a></li>
        <!-- <li><a href="/login">Services</a></li> -->
        <li><a href="/contact">Conatct</a></li>
          <li><a href="/login" class="action_btn">Logout </a> </li>
      </div>
    </header>
   
    <section>
        <button><a href="/data">Back</a></button>
       
    </section>

    <p><%= message %></p> <!-- Display message here -->
    <form action="/submit-form" method="POST">
        <label for="company">Company:</label>
        <select id="company" name="company" required>
            <% companies.forEach(company => { %>
                <% const companyName = company.split('(')[0].trim(); %> <!-- Split and trim to remove year suffix -->
                <option value="<%= companyName %>"><%= companyName %></option>
            <% }); %>
        </select>

        <label for="year">Year:</label>
        <select id="year" name="year" required>
            <% years.forEach(year => { %>
                <option value="<%= year %>"><%= year %></option>
            <% }); %>
        </select>
        <label for="month">Month:</label>
        <select id="month" name="month" required>
            <% months.forEach(month => { %>
                <option value="<%= month %>"><%= month %></option>
            <% }); %>
        </select>
        <label for="Rice">Rice:</label>
        <input type="number" id="Rice" name="Rice" required>
        <label for="Dal">Dal:</label>
        <input type="number"  id="Dal" name="Dal" required>
        <label for="Sugar">Sugar:</label>
        <input type="number" id="Sugar" name="Sugar" required>

        <button type="submit">Submit</button>
    </form>
</body>
</html>
